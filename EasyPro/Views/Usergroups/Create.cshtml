@model EasyPro.Models.Usergroup

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <div class="cmp-tb-hd">
                <h2>Create</h2>
            </div>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="GroupId" class="control-label"></label>
                            <input asp-for="GroupId" class="form-control" />
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="GroupName" class="control-label"></label>
                            <input asp-for="GroupName" class="form-control" />
                            <span asp-validation-for="GroupName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="CashBook" class="control-label"></label>
                            <input asp-for="CashBook" type="checkbox" class="form-control" />
                            <span asp-validation-for="CashBook" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Transactions" class="control-label"></label>
                            <input asp-for="Transactions" type="checkbox" class="form-control" />
                            <span asp-validation-for="Transactions" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Activity" class="control-label"></label>
                            <input asp-for="Activity" type="checkbox" class="form-control" />
                            <span asp-validation-for="Activity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Reports" class="control-label"></label>
                            <input asp-for="Reports" type="checkbox" class="form-control" />
                            <span asp-validation-for="Reports" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Setup" class="control-label"></label>
                            <input asp-for="Setup" type="checkbox" class="form-control" />
                            <span asp-validation-for="Setup" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Files" class="control-label"></label>
                            <input asp-for="Files" type="checkbox" class="form-control" />
                            <span asp-validation-for="Files" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Accounts" class="control-label"></label>
                            <input asp-for="Accounts" type="checkbox" class="form-control" />
                            <span asp-validation-for="Accounts" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountsPay" class="control-label"></label>
                            <input asp-for="AccountsPay" type="checkbox" class="form-control" />
                            <span asp-validation-for="AccountsPay" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FixedAssets" class="control-label"></label>
                            <input asp-for="FixedAssets" type="checkbox" class="form-control" />
                            <span asp-validation-for="FixedAssets" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
