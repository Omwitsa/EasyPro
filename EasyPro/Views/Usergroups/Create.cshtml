                                        <label asp-for="MilkTest"></label>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="VarBalancing" type="checkbox" />
                                        <label asp-for="VarBalancing"></label>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Dispatch" type="checkbox" />
                                        <label asp-for="Dispatch"></label>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="SendSms" type="checkbox" />
