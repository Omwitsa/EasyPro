                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                     
                        <div class="form-group">
                            <input asp-for="Flmd" type="checkbox" />
                            <label asp-for="Flmd"></label>
                        </div>
                        <div class="form-group">
                            <input asp-for="Activity" type="checkbox" />
                            <label asp-for="Activity"></label>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <div class="col-md-3 ml-md-auto">
                                    </div>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <div class="form-group">
                                        <input asp-for="ProdIntake" type="checkbox" />
                                        <label asp-for="ProdIntake"></label>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="IntakeCorrection" type="checkbox" />
                                        <label asp-for="IntakeCorrection"></label>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ImportIntake" type="checkbox" />
                                        <label asp-for="ImportIntake"></label>
                                    </div>
                                    <div class="form-group">
