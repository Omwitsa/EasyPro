                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ProdSales" type="checkbox" />
                                        <label asp-for="ProdSales"></label>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="SalesReturn" type="checkbox" />
