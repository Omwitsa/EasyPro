                                    </div>
                                    <div class="form-group">
                                        <input asp-for="TransporterStatement" type="checkbox" />
                                        <label asp-for="TransporterStatement"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Accounts" type="checkbox" />
                            <label asp-for="Accounts"></label>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <div class="col-md-3 ml-md-auto">
                                    </div>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <div class="form-group">
                                        <input asp-for="ChartsofAcc" type="checkbox" />
