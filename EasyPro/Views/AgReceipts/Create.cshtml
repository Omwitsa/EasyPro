@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            $('#cash').prop('checked', true);
            $('#checkOffDetails').hide();
            $('#transpoterDetails').hide();
            $('input[type="radio"]').click(function () {
                if ($(this).prop("checked") && $(this).attr('id') == 'cash') {
                    $('#cash_details').show();
                    $('#checkOffDetails').hide();
                    $('#transpoterDetails').hide();
                }
                if ($(this).prop("checked") && $(this).attr('id') == 'checkOff') {
                    $('#cash_details').hide();
                    $('#checkOffDetails').show();
                    $('#transpoterDetails').hide();
                }
                if ($(this).prop("checked") && $(this).attr('id') == 'transporter') {
                    $('#cash_details').hide();
                    $('#checkOffDetails').hide();
                    $('#transpoterDetails').show();
                }

                let journalDetails = new Array();
                $('#drAmt').on('blur', function () {
                    let drAmt = parseFloat($("#drAmt").val());
                    if (drAmt) {
                        buildJournalDetails();
                    }
                });

                $('#crAmt').on('blur', function () {
                    let crAmt = parseFloat($("#crAmt").val());
                    if (crAmt) {
                        buildJournalDetails();
                    }
                });

                $('#clearAll').on('click', function () {
                    $("#totalDrAmt").val(0);
                    $("#totalCrAmt").val(0);
                    journalDetails = new Array();
                    populateDetailsTable();
                });

                $('#save').on('click', function () {
                    let totalDrAmt = parseFloat($("#totalDrAmt").val());
                    let totalCrAmt = parseFloat($("#totalCrAmt").val());

                    if (totalDrAmt != totalCrAmt) {
                        alert("Sorry, Debit amount must be equal to credit amount")
                        return
                    }
                    if (totalDrAmt < 1) {
                        alert("Sorry, No item debited")
                        return
                    }

                    let crAccounts = journalDetails.filter(j => !j.isdebit);
                    let drAccounts = journalDetails.filter(j => j.isdebit);
                    let docNo = $("#documentNo").val();
                    docNo = docNo ? docNo : "";
                    let transDescript = $("#transDescript").val();
                    transDescript = transDescript ? transDescript : "";
                    let transactions = new Array();
                    if (drAccounts.length > 1) {
                        drAccounts.forEach(d => {
                            transactions.push({
                                amount: d.amount,
                                drAccNo: d.glAcc,
                                crAccNo: crAccounts[0].glAcc,
                                documentNo: docNo,
                                chequeNo: docNo,
                                transDescript: transDescript
                            });
                        });
                    }
                    else {
                        crAccounts.forEach(d => {
                            transactions.push({
                                amount: d.amount,
                                drAccNo: drAccounts[0].glAcc,
                                crAccNo: d.glAcc,
                                documentNo: docNo,
                                ChequeNo: docNo
                            });
                        });
                    }

                    $.ajax({
                        type: 'POST',
                        url: "journalPosting",
                        contentType: 'application/json',
                        data: JSON.stringify(transactions),
                        success: function (response) {
                            //if (response.Success) {

                            //}
                            $("#totalDrAmt").val(0);
                            $("#totalCrAmt").val(0);
                            journalDetails = new Array();
                            populateDetailsTable();
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });


                });

                function buildJournalDetails() {
                    let glAcc = $("#glAcc").val();
                    let drAmt = parseFloat($("#drAmt").val());
                    let crAmt = parseFloat($("#crAmt").val());
                    if (!glAcc) {
                        $("#drAmt").val(0);
                        $("#crAmt").val(0);
                        alert("Kindly provide GL Account")
                        return
                    }

                    let isdebit = drAmt > 0;
                    let amount = isdebit ? drAmt : crAmt;
                    let drAccounts = journalDetails.filter(j => j.isdebit);
                    let crAccounts = journalDetails.filter(j => !j.isdebit);
                    let blockDrAcc = crAccounts.length > 1 && drAccounts.length > 0 && drAmt;
                    let blockCRAcc = drAccounts.length > 1 && crAccounts.length > 0 && crAmt;
                    if (blockDrAcc || blockCRAcc) {
                        alert("Sorry, A journal must have a single entry in at least on side")
                        return
                    }

                    let creditAmount = 0;
                    crAccounts.forEach(c => {
                        creditAmount += c.amount;
                    });
                    creditAmount = isdebit ? creditAmount : creditAmount + amount;
                    let debitAmount = 0;
                    drAccounts.forEach(c => {
                        debitAmount += c.amount;
                    });
                    debitAmount = isdebit ? debitAmount + amount : debitAmount;
                    $("#totalDrAmt").val(debitAmount);
                    $("#totalCrAmt").val(creditAmount);

                    journalDetails.push({
                        glAcc: glAcc,
                        amount: amount,
                        isdebit: isdebit,
                    });

                    $("#glAcc").val("");
                    $("#drAmt").val(0);
                    $("#crAmt").val(0);

                    populateDetailsTable();
                }

                function populateDetailsTable() {
                    let itemTableRows = new Array();
                    journalDetails.forEach(j => {
                        drAmt = j.isdebit ? j.amount : 0;
                        crAmt = j.isdebit ? 0 : j.amount;
                        itemTableRows.push(`<tr>
				        <td>${j.glAcc}</td>
                        <td>${drAmt}</td>
                        <td>${crAmt}</td>
			        </tr>`);
                    });

                    $('#details').html(itemTableRows);
                }
            });
            $('#pname').on('click', function () {
                var products = @Html.Raw(Json.Serialize(Model.AgProductobj));
                 var selectVal = $("#pname").val();
                 var selectProducts = products.filter(p => p.PName === selectVal);
                if (selectProducts[0]) {
                    $("#pcode").val(selectProducts[0].PCode);
                    $("#qnty").val(selectProducts[0].Qin);
                    $("#sbal").val(selectProducts[0].OBal);
                    $("#bprice").val(selectProducts[0].Pprice);
                    $("#sprice").val(selectProducts[0].Sprice);
                }
             });

            @*$('#tsno').on('keyup', function () {
                var products = @Html.Raw(Json.Serialize(Model.DTransporter));
                var selectVal = $("#tsno").val();
                var selectProducts = products.filter(p => p.TransCode === selectVal);
                if (selectProducts[0]) {
                    $("#tname").val(selectProducts[0].TransName);
                }
            });

            $('#sno').on('keyup', function () {
                var products = @Html.Raw(Json.Serialize(Model.DSuppliers));
                var selectVal = parseInt($("#sno").val());
                var selectProducts = products.filter(p => p.Sno === selectVal);
                if (selectProducts[0]) {
                    $("#names").val(selectProducts[0].Names);
                }
            });*@

            let saleItems = new Array();
            $('#next').on('click', function () {
                var pcode = $("#pcode").val();
                var pname = $("#pname").val();
                var bprice = $("#bprice").val();
                var sprice = $("#sprice").val();
                var qnty = $("#qnty").val();
                var totalamnt = $("#totalamnt").val();

                saleItems.push(`<tr>
				        <td>${pcode}</td>
                        <td>${pname}</td>
                        <td>${qnty}</td>
                        <td>${sprice}</td>
                        <td>${totalamnt}</td>
			        </tr>`);

                $('#details').html(saleItems);
            });
        });
    </script>
