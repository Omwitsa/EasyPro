@model EasyPro.Models.DTransporter

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <div class="cmp-tb-hd">
                <h2>Create Transporter</h2>
            </div>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12"></div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label class="control-label">Registration Date</label>
                                <input type="date" asp-for="TregDate" class="form-control" required />
                                <span asp-validation-for="TregDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label asp-for="TransCode" class="control-label"></label>
                                <input asp-for="TransCode" autocomplete="off" class="form-control" required/>
                                <span asp-validation-for="TransCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label class="control-label">Name</label>
                                <input asp-for="TransName" autocomplete="off" class="form-control" required/>
                                <span asp-validation-for="TransName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label class="control-label">ID No</label>
                                <input asp-for="CertNo" autocomplete="off" class="form-control" required/>
                                <span asp-validation-for="CertNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label asp-for="Phoneno" class="control-label"></label>
                                <input asp-for="Phoneno" autocomplete="off" class="form-control" required />
                                <span asp-validation-for="Phoneno" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label asp-for="PaymenMode" class="control-label">Payment Mode</label>
                                <select asp-for="PaymenMode" class="form-control" asp-items="@ViewBag.payment" required></select>
                                <span asp-validation-for="PaymenMode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label class="control-label">Branch</label>
                                <select asp-for="Tbranch" class="form-control" asp-items="@ViewBag.brances" required></select>
                                <span asp-validation-for="Tbranch" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <div class="form-group">
                                    <label asp-for="Active" class="control-label">
                                        <input asp-for="Active" type="checkbox" />@Html.DisplayNameFor(model => model.Active)
                                        <span asp-validation-for="Active" class="text-danger"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <b class="text-info">Bank Activities</b>
                <hr />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label asp-for="Bcode" class="control-label">Name</label>
                                <select asp-for="Bcode" class="form-control" asp-items="@ViewBag.banksname"></select>
                                <span asp-validation-for="Bcode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label asp-for="Accno" class="control-label"></label>
                                <input asp-for="Accno" autocomplete="off" class="form-control" />
                                <span asp-validation-for="Accno" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label asp-for="Bbranch" class="control-label">Bank Branch</label>
                                <select asp-for="Bbranch" class="form-control" asp-items="@ViewBag.bankbrances" required></select>
                                <span asp-validation-for="Bbranch" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
