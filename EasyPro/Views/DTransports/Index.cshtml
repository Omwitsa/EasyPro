@model IEnumerable<EasyPro.ViewModels.TranssupplyVM.TransSuppliersVM>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <h3 class="text-danger fa-bold">Transporters Assign To Farmers</h3>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <input id="gfg" type="text" class="form-control"
                           placeholder="Search here">
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <a asp-action="Create" class="btn btn-primary">Create New</a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Download Report</h3>
                        </div>
                        <form autocomplete="off" asp-controller="Report" asp-antiforgery="true" asp-action="DownloadReport" method="post">
                            <div class="card-body register-card-body">
                                <div class="form-row">
                                    <button type="submit" id="btnsubmit" class="btn btn-success">Export to Excel</button>
                                </div>

                            </div>
                            <div class="card-footer">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Names)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Startdate)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="geeks">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Names)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Startdate)
                                    </td>
                                    <td class="col-4">
                                        <a class="btn-warning btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        @*<a class="btn-info btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                                        <a class="btn-danger btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#gfg").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#geeks tr").filter(function () {
                    $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
