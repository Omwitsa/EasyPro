@model EasyPro.Models.Coffee.DeliveryNote

@{
    ViewData["Title"] = "Create";
}
<div class="row">

    <div class="form-element-list mg-t-30">
        <div class="cmp-tb-hd">
            <h2>Delivery Note</h2>
        </div>
        <hr />

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Date" class="control-label"></label>
                                <input type="date" asp-for="Date" class="form-control" required />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GrowersCode" class="control-label"></label>
                                <input asp-for="GrowersCode" class="form-control" required />
                                <span asp-validation-for="GrowersCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Branch" class="control-label"></label>
                                <select id="glAcc" asp-for="Branch" class="form-control" asp-items="@ViewBag.Branch" required>
                                    <option value="" disabled selected hidden> Select Branch</option>
                                </select>
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="NoteNo" class="control-label"></label>
                                <input asp-for="NoteNo" class="form-control" required />
                                <span asp-validation-for="NoteNo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoffeType" class="control-label"></label>
                                <select id="glAcc" asp-for="CoffeType" class="form-control" asp-items="@ViewBag.Coffee" required>
                                    <option value="" disabled selected hidden> Select Coffee Type</option>
                                </select>
                                <span asp-validation-for="CoffeType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VehicleNo" class="control-label"></label>
                                <input asp-for="VehicleNo" class="form-control" required />
                                <span asp-validation-for="VehicleNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="NoBags" class="control-label"></label>
                                <input asp-for="NoBags" class="form-control" value="0" />
                                <span asp-validation-for="NoBags" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Driver" class="control-label"></label>
                                <input asp-for="Driver" class="form-control" required />
                                <span asp-validation-for="Driver" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Comment" class="control-label"></label>
                                <select id="glAcc" asp-for="Comment" class="form-control" asp-items="@ViewBag.Comment">
                                    <option value="" disabled selected hidden> Select Comment</option>
                                </select>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                </form>
    </div>
</div>

