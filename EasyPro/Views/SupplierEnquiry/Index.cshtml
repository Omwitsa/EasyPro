</div>
<div class="bsc-tbl-hvr table-border-style">
    <div class="table-responsive">
        <table class="table table-hover">
                <tr>
                    <th>Date</th>
                    <th>Product Type</th>
                    <th>Quantity</th>
                    <th>CR</th>
                    <th>DR</th>
                    <th>Balance</th>
                    <th>Description</th>
                    <th>Remarks</th>
                </tr>
            <tbody id="intakes">
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>


    </script>
    <script type="text/javascript">

        $(function () {

            var date = new Date();

            var firstDay = new Date(date.getFullYear(), date.getMonth(), 1).toLocaleDateString();
            var lastDay = new Date(date.getFullYear(), date.getMonth() + 1, 0).toLocaleDateString();
            $("#firstdate").val(firstDay);
            $("#enddate").val(lastDay);
            $("#bname").prop("selectedIndex", -1);
        });
        $(function () {

            $('#sno').on('keyup', function () {
                var suppliers = @Html.Raw(Json.Serialize(ViewBag.suppliers));
                var selectVal = parseInt($("#sno").val());               
              
                var selectsuppliers = suppliers.filter(p => p.Sno === selectVal);
                    if (selectsuppliers[0]) {
                        $("#names").val(selectsuppliers[0].Names);
                        $("#idno").val(selectsuppliers[0].IdNo);
                        $("#phoneno").val(selectsuppliers[0].PhoneNo);
                        $("#accno").val(selectsuppliers[0].AccNo);
                        $("#bbranch").val(selectsuppliers[0].Bbranch);
                        $.ajax({
                            type: 'POST',
                            url: `suppliedProducts`,
                            contentType: 'application/json',
                            data: JSON.stringify(selectsuppliers[0]),
                            success: function (response) {
                                //if (response.Success) {
                                    
                                //}
                                populateIntake(response)
                            },
                            failure: function (response) {
                            }
                        }).then(function () {
                            // ...
                        });
                    }
            });
           
            function populateIntake(intakes) {
               
                var selectVal = parseInt($("#sno").val());
                let itemTableRows = new Array();
                intakes.forEach(i => {
                    debugger;
                    var ddate = i.TransDate;
                    var dd1=new Date(ddate).toLocaleDateString();
                    itemTableRows.push(`<tr>
				        <td>${dd1}</td>                        
                        <td>${i.ProductType}</td>
                        <td>${i.Qsupplied}</td>
                        <td>${i.CR}</td>
                        <td>${i.DR}</td>
                        <td>${i.Balance}</td>
                        <td>${i.Description}</td>
                        <td>${i.Remarks}</td>
			        </tr>`)
                    var Total = 0;
                    var Total2 = 0;
                    var netpay = 0;
                    intakes.forEach(i => {
                        var ddr = 0;
                        var ccr = 0;
                        ddr = i.DR;
                        ccr = i.CR;
                        Total2 = Total2 + ddr;
                        Total = Total + ccr;
                        netpay = Total - Total2;

                    });
                    $('#netpay').val(netpay);
                    $('#totaldeductions').val(Total2)
                    $('#grosspay').val(Total)
                });
                
                $('#intakes').html(itemTableRows);
            }
        });
    </script>
}