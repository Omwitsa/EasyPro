@model EasyPro.ViewModels.EnquiryVM.TransportersEnquiryVM
@{
    ViewData["Title"] = "Transporters";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <label class="control-label">TranCode</label>
                <input id="sno" autocomplete="off" class="form-control" required />
                <span class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">Names</label>
                    <input id="names" autocomplete="off" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">IdNo</label>
                    <input id="idno" autocomplete="off" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <label class="control-label">Phone No</label>
                <input id="phoneno" autocomplete="off" class="form-control" />
                <span class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <label class="control-label">BName</label>
                <input id="bname" autocomplete="off" class="form-control" />
                <span class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">Acc No</label>
                    <input id="accno" autocomplete="off" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">BBranch</label>
                    <input id="bbranch" autocomplete="off" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">Gross Pay</label>
                    <input id="grosspay" class="form-control text-green" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <label asp-for="FilterVm.DateFrom" class="control-label"></label>
                <input id="firstdate" required class="form-control" type="text" />
                <span asp-validation-for="FilterVm.DateFrom" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label asp-for="FilterVm.DateTo" class="control-label"></label>
                    <input id="enddate" required class="form-control" type="text" />
                    <span asp-validation-for="FilterVm.DateTo" class="text-danger"></span>
                    <a id="showtable" class="btn-warning btn-success">Show</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">NETPAY</label>
                    <input id="netpay" class="form-control text-danger" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="form-group ic-cmp-int float-lb floating-lb">
            <div class="nk-int-st">
                <div class="form-group">
                    <label class="control-label">Deductions</label>
                    <input id="totaldeductions" class="form-control text-blue" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="bsc-tbl-hvr table-border-style">
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th>Date</th>
                <th>Product Type</th>
                <th>Quantity</th>
                <th>CR</th>
                <th>DR</th>
                <th>Balance</th>
                <th>Description</th>
                <th>Remarks</th>
            </tr>
            <tbody id="intakes">
            </tbody>
        </table>
    </div>
</div>
<link href="~/css/jquery-ui.css" rel="stylesheet" />
@section Scripts {
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    @*<script src="~/js/deduction.js"></script>*@
    <script type="text/javascript">
       /* const { Doc } = require("codemirror");*/
        $(function ()
        {
            var date = new Date();

            var firstDay = new Date(date.getFullYear(), date.getMonth(), 1).toLocaleDateString();
            var lastDay = new Date(date.getFullYear(), date.getMonth() + 1, 0).toLocaleDateString();
            $("#firstdate").val(firstDay);
            $("#enddate").val(lastDay);

            $("#bname").prop("selectedIndex", -1);
        });
        $(function () {
            $("#firstdate").datepicker();
        });
        $(function () {
            $("#enddate").datepicker();
        });

        $(function ()
        {

             $("#showtable").click(function () {
                 var sno = $("#sno").val().toUpperCase();
                var date1 = $("#firstdate").val();
                var date2 = $("#enddate").val();
                    $.ajax(
                        {
                            type: 'POST',
                            url: "SuppliedProductsTransporter?sno="+sno+"&date1="+date1+"&date2="+date2+"",
                            contentType: 'application/json',
                            data: JSON.stringify(),
                            success: function (response) {
                                populateIntake3(response)
                            },
                            failure: function (response) {
                            }
                        }).then(function () {
                            // ...
                        });
                });
            function populateIntake3(intakes) {
                var selectVal = $("#sno").val().toUpperCase();
                let itemTableRows = new Array();
                intakes.forEach(i => {
                    //debugger;
                    var ddate = i.TransDate;
                    var dd1 = new Date(ddate).toLocaleDateString();
                    itemTableRows.push(`<tr>
				        <td>${dd1}</td>
                        <td>${i.ProductType}</td>
                        <td>${i.Qsupplied}</td>
                        <td>${i.CR}</td>
                        <td>${i.DR}</td>
                        <td>${i.Balance}</td>
                        <td>${i.Description}</td>
                        <td>${i.Remarks}</td>
			        </tr>`)
                    var Total = 0;
                    var Total2 = 0;
                    var netpay = 0;
                    intakes.forEach(i => {
                        var ddr = 0;
                        var ccr = 0;
                        ddr = i.DR;
                        ccr = i.CR;
                        Total2 = Total2 + ddr;
                        Total = Total + ccr;
                        netpay = Total - Total2;

                    });
                    $('#netpay').val(netpay);
                    $('#totaldeductions').val(Total2)
                    $('#grosspay').val(Total)
                });

                $('#intakes').html(itemTableRows);
            }
            });
        $(function () {

            $("#bname").change(function () {
                var producttype = $("#bname").val();
                var sno = $("#sno").val().toUpperCase();
                var date1 = $("#firstdate").val();
                var date2 = $("#enddate").val();
                    $.ajax(
                        {

                            type: 'POST',
                            url: "SuppliedProducts2?sno="+sno+"&producttype="+producttype+"&date1="+date1+"&date2="+date2+"",
                            contentType: 'application/json',
                            data: JSON.stringify(),
                            success: function (response) {
                                //if (response.Success) {

                                //}
                                populateIntake2(response)
                            },
                            failure: function (response) {
                            }
                        }).then(function () {
                            // ...
                        });
                });
