                    }).then(function () {
                        // ...
                    });
                }
            });

            function populateIntake(intakes) {
                let selectVal = $("#sno").val().toUpperCase();
                let itemTableRows = new Array();
                let grossPay = 0;
                let deductions = 0;
                let totalQty = 0;

                intakes.forEach(i => {
                    let ddate = i.TransDate;
                    let dd1 = new Date(ddate).toLocaleDateString();
                    itemTableRows.push(`<tr>
				        <td>${dd1}</td>
                        <td>${i.ProductType}</td>
                        <td>${i.Qsupplied.toFixed(2)}</td>
                        <td>${i.CR.toFixed(2)}</td>
                        <td>${i.DR.toFixed(2)}</td>
                        <td>${i.Balance.toFixed(2)}</td>
                        <td>${i.Description}</td>
                        <td>${i.Remarks}</td>
			        </tr>`);

                    deductions += i.DR;
                    grossPay += i.CR;
                    totalQty += i.Qsupplied;
                });
                let netpay = grossPay - deductions;
                $('#totalQty').val(totalQty.toFixed(2));
                $('#netpay').val(netpay.toFixed(2));
                $('#totaldeductions').val(deductions.toFixed(2))
                $('#grosspay').val(grossPay.toFixed(2))
                $('#intakes').html(itemTableRows);
