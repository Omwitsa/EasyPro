        $(function () {
            $('#sno').on('keyup', function () {
                var suppliers = @Html.Raw(Json.Serialize(ViewBag.transporters));
                var selectVal = $("#sno").val().toUpperCase();
                var sno = $("#sno").val().toUpperCase();
                var idno = $("#idno").val();
                var date1 = $("#firstdate").val();
                var date2 = $("#enddate").val();
                var selectsuppliers = suppliers.filter(p => p.TransCode === selectVal);
                    if (selectsuppliers[0]) {
                        $("#names").val(selectsuppliers[0].TransName);
                        $("#idno").val(selectsuppliers[0].CertNo);
                        $("#phoneno").val(selectsuppliers[0].Phoneno);
                        $("#bname").val(selectsuppliers[0].Bcode);
                        $("#accno").val(selectsuppliers[0].Accno);
                        $("#bbranch").val(selectsuppliers[0].Bbranch);
                        $.ajax({
                            type: 'POST',
                            url: "SuppliedProductsTransporter?sno=" + sno +"&date1="+date1+"&date2="+date2+"",
                            contentType: 'application/json',
                            data: JSON.stringify(selectsuppliers[0]),
                            success: function (response) {
                                //if (response.Success) {

                                //}
                                populateIntake(response)
                            },
                            failure: function (response) {
                            }
                        }).then(function () {
                            // ...
                        });
                    }
            });

            function populateIntake(intakes) {

                var selectVal = $("#sno").val().toUpperCase();
                let itemTableRows = new Array();
                intakes.forEach(i => {
                    //debugger;
                    var ddate = i.TransDate;
                    var dd1=new Date(ddate).toLocaleDateString();
                    itemTableRows.push(`<tr>
				        <td>${dd1}</td>
                        <td>${i.ProductType}</td>
                        <td>${i.Qsupplied}</td>
                        <td>${i.CR}</td>
                        <td>${i.DR}</td>
                        <td>${i.Balance}</td>
                        <td>${i.Description}</td>
                        <td>${i.Remarks}</td>
			        </tr>`)
                    var Total = 0;
                    var Total2 = 0;
                    var netpay = 0;
                    intakes.forEach(i => {
                        var ddr = 0;
                        var ccr = 0;
                        ddr = i.DR;
                        ccr = i.CR;
                        Total2 = Total2 + ddr;
                        Total = Total + ccr;
                        netpay = Total - Total2;

                    });
                    $('#netpay').val(netpay);
                    $('#totaldeductions').val(Total2)
                    $('#grosspay').val(Total)
                });

                $('#intakes').html(itemTableRows);
            }
        });
    </script>

}
