<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f6;
        }

        #customers tr:hover {
            background-color: #c3d8eb;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1050px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <h3 class="text-danger fa-bold">ACS</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Membership</label>
                        <select id="membership" class="form-control" asp-items="@ViewBag.filters">
                            <option value=""></option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">No.</label>
                        <input id="no" autocomplete="off" class="form-control" />
                    </div>
                </div>
               
                <div class="col-sm-2 col-xs-12">
                    <div class="form-group">
                        <label class="control-label"></label>
                        <a id="generate" class="btn btn-warning">Generate</a>
                    </div>
                </div>
            </div>

            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    System
                                </th>
                                <th>
                                    Last Month Amount
                                </th>
                                <th>
                                    Last 2 Months Amount
                                </th>
                                <th>
                                    Last 3 Months Amount
                                </th>
                                <th>
                                    Average Supply Amount
                                </th>
                                <th>
                                    Shares Contribs
                                </th>
                                <th>
                                    FLMD Value
                                </th>
                                <th>
                                    Liable Loan
                                </th>
                            </tr>
                        </thead>
                        <tbody id="details">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            let acs = new Array();
            $('#generate').on('click', function () {
                var no = $("#no").val();
                var membership = $("#membership").val();
                $.ajax({
                    type: 'GET',
                    url: "getLoanLiable?membership=" + membership + "&no=" + no,
                    contentType: 'application/json',
                    success: function (response) {
                        acs = response ? response : [];
                        populateDetailsTable();
                    },
                    failure: function (response) {
                    }
                }).then(function () {
                    // ...
                });
            });

            $('#save').on('click', function () {
                var accNo = $("#accNo").val();
                var period = $("#period").val();
                var amount = $("#spreadAmount").val();
                var perMonth = $("#perMonth").val();
                var budgetMethod = $('input[name="budgetMethod"]:checked').val();
                var fixed = budgetMethod === 'fixed' ? true : false;

                var filter = {
                    accNo: accNo,
                    period: period,
                    amount: amount,
                    fixed: fixed,
                    monthly: perMonth
                };

                if (accNo && period && amount) {
                    $.ajax({
                        type: 'POST',
                        url: "budget",
                        contentType: 'application/json',
                        data: JSON.stringify(filter),
                        success: function (response) {
                            $("#accNo").val('');
                            $("#spreadAmount").val(0);
                            journalDetails = response ? response : [];
                            populateDetailsTable();
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
                }
            });

            function populateDetailsTable() {
                let itemTableRows = new Array();
                let total = 0;
                acs.forEach(j => {
                    itemTableRows.push(`<tr>
                                        <td>${j.Name}</td>
                                        <td>${j.LastMonthAmount}</td>
                                        <td>${j.Last2MonthAmount}</td>
                                        <td>${j.Last3MonthAmount}</td>
                                        <td>${j.AverageAmount}</td>
                                        <td>${j.Shares}</td>
                                        <td>${j.FlmdValue}</td>
                                        <td>${j.LiableAmount}</td>
                                    </tr>`);
                                    debugger
                    total += j.LiableAmount;
                });

                itemTableRows.push(`<tr>
                                        <td colspan="7">Total: </td>
                                        <td>${total}</td>
                                    </tr>`);

                $('#details').html(itemTableRows);
            }
        });
    </script>
}
