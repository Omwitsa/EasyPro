@model EasyPro.Models.EmpDeduction

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <div class="cmp-tb-hd">
                <h2>Create</h2>
            </div>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-8 col-xs-12">

                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Date" class="control-label"></label>
                            <input type="date" id="transDate" asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Employee</label>
                            <select asp-for="EmpNo" class="chzn-select form-control" asp-items="@ViewBag.employees">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="EmpNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="DeductionType" class="control-label"></label>
                            <select asp-for="DeductionType" class="chzn-select form-control" asp-items="@ViewBag.deductions">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="DeductionType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label value="Is Default Deduction?" class="control-label">
                                <input asp-for="IsstandingOrder" type="checkbox" />@Html.DisplayNameFor(model => model.IsstandingOrder)
                                <span asp-validation-for="IsstandingOrder" class="text-danger"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#transDate").val(today);
            $(".chzn-select").chosen();
        });
    </script>
}
