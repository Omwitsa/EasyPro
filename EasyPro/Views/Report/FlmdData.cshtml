@*@model IEnumerable<EasyPro.Models.milkcontrol2>*@
@model EasyPro.ViewModels.FlmdDataVM

@{
    ViewData["Title"] = "MilkcontrolDetails";
}

<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #4cff00;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1050px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <h3 class="text-danger fa-bold">FLMD FARMERS DETAIL LIST REPORT</h3>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <form asp-controller="Report" asp-antiforgery="true" asp-action="FlmdDataExcel" method="post">
                        <button type="submit" class="btn btn-success">Export to Excel</button>
                    </form>
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="divScroll">
                    <div class="table-responsive">
                        <table class="table table-hover" id="customers">
                            <thead>
                                <tr>
                                    <th>
                                        Sno
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        Milk Delivered(Ksh)
                                    </th>
                                    <th>
                                        Asset(Ksh)
                                    </th>
                                    <th>
                                        Total Amount(Ksh)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.farmerdetails)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sno)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MilkKgs)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Assets)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
