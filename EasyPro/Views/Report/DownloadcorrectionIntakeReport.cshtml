                                            <label asp-for="DateTo" class="control-label"></label>
                                            <input id="zone_intake_to" asp-for="DateTo" class="form-control" type="date" />
                                            <span asp-validation-for="DateTo" class="text-danger"></span>
                                        </div>

                                        <a id="zone_intake_pdf" class="btn btn-info">Export to PDF</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
               
            </div>
        </div>
