</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#daily_summary_to").val(today);
            $("#daily_summary_from").val(today);
            $("#supplier_intake_from").val(today);
            $("#supplier_intake_to").val(today);
            $("#zone_intake_from").val(today);
            $("#zone_intake_to").val(today);
            
            $('#daily_summary_pdf').on('click', function () {
                let from = $("#daily_summary_from").val();
                let to = $("#daily_summary_to").val();
                var filter = {
                    dateFrom: from,
                    dateTo: to,
                };
                $.ajax({
                    type: 'POST',
                    url: "DailySummaryPdf",
                    contentType: 'application/json',
                    data: JSON.stringify(filter),
                    success: function (response) {
                        if (response.isRedirect) {
                            window.open(response.redirectUrl);
                        }
                    },
                    failure: function (response) {
                    }
                }).then(function () {
                    // ...
                });
            });

            $('#supplier_intake_pdf').on('click', function () {
                let from = $("#supplier_intake_from").val();
                let to = $("#supplier_intake_to").val();
                var filter = {
                    dateFrom: from,
                    dateTo: to,
                };
                $.ajax({
