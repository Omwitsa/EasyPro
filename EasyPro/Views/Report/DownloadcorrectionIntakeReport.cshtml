                            window.open(response.redirectUrl);
                        }
                    },
                    failure: function (response) {
                    }
                }).then(function () {
                    // ...
                });
            });
            
            $('#zone_intake_pdf').on('click', function () {
                let from = $("#zone_intake_from").val();
                let to = $("#zone_intake_to").val();
                var filter = {
                    dateFrom: from,
                    dateTo: to,
                };
                $.ajax({
                    type: 'POST',
                    url: "ZoneIntakePdf",
                    contentType: 'application/json',
                    data: JSON.stringify(filter),
                    success: function (response) {
                        if (response.isRedirect) {
                            window.open(response.redirectUrl);
                        }
                    },
                    failure: function (response) {
                    }
                }).then(function () {
                    // ...
                });
            });

        });
    </script>
}
