@model EasyPro.ViewModels.FilterVm
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Summary Suppliers Intake Report</h3>
            </div>
            <form autocomplete="off" asp-controller="Report" asp-antiforgery="true" asp-action="TransportersBalancing" method="post">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Transporter Name</label>
                            <select id="name" class="form-control" asp-items="@ViewBag.Transporters">
                                <option disabled selected hidden>Please Choose...</option>
                            </select>
                            <span asp-validation-for="Transporter" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Transporter" class="control-label">Transporter Code</label>
                            <input id="code" required asp-for="Transporter" class="form-control" readonly />
                            <span asp-validation-for="Transporter" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                        <div class="form-group">
                            <label asp-for="DateTo" class="control-label"></label>
                            <input required asp-for="DateTo" class="form-control" type="date" />
                            <span asp-validation-for="DateTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-body register-card-body">
                    <div class="form-row">
                        <button type="submit" id="btnsubmit" class="btn btn-success">Export to Excel</button>
                    </div>
                </div>
                <div class="card-footer">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script type="text/javascript">
        $(function () {

            $('#name').on('click', function () {
                var suppliers = @Html.Raw(Json.Serialize(ViewBag.Transportersdetails));
                var selectVal = $("#name").val();
                var selectSupplier = suppliers.filter(p => p.TransName === selectVal);
                if (selectSupplier[0]) {
                    $("#code").val(selectSupplier[0].TransCode);
                }
            });
        });
</script>
}
