@model EasyPro.ViewModels.FilterVm
@{
    ViewData["Title"] = "DownloadTReport";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Transporter Register Report</h3>
                </div>
                
                <div class="card-body register-card-body">
                    <div class="form-row">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <form asp-controller="Report" asp-antiforgery="true" asp-action="Transporter" method="post">
                                    <button type="submit" class="btn btn-success">Export to Excel</button>
                                </form>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <form asp-controller="Report" asp-antiforgery="true" asp-action="TransporterPdf" method="post">
                                    <button type="submit" class="btn btn-info">Export to PDF</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row"></div>
    <br />
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Transporters Intake Report</h3>
                </div>
                
                <div class="card-body register-card-body">
                    <div class="form-row">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <form asp-controller="Report" asp-antiforgery="true" asp-action="TIntake" method="post">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                                            <div class="form-group">
                                                <label asp-for="DateFrom" class="control-label"></label>
                                                <input required asp-for="DateFrom" class="form-control" type="date" />
                                                <span asp-validation-for="DateFrom" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                                            <div class="form-group">
                                                <label asp-for="DateTo" class="control-label"></label>
                                                <input required asp-for="DateTo" class="form-control" type="date" />
                                                <span asp-validation-for="DateTo" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success">Export to Excel</button>
                                </form>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <form asp-controller="Report" asp-antiforgery="true" asp-action="TIntakePdf" method="post">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                                            <div class="form-group">
                                                <label asp-for="DateFrom" class="control-label"></label>
                                                <input required asp-for="DateFrom" class="form-control" type="date" />
                                                <span asp-validation-for="DateFrom" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                                            <div class="form-group">
                                                <label asp-for="DateTo" class="control-label"></label>
                                                <input required asp-for="DateTo" class="form-control" type="date" />
                                                <span asp-validation-for="DateTo" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-info">Export to PDF</button>
                                </form>

                               @* <div class="form-group">
                                    <label class="control-label"></label>
                                    <input id="intake_from" class="form-control" type="date" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    <input id="intake_to" class="form-control" type="date" />
                                </div>
                                <button id="btn_intake_pdf"  class="btn btn-info">Export to PDF</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Transporters Deduction Report</h3>
                </div>
                <form autocomplete="off" asp-controller="Report" asp-antiforgery="true" asp-action="TDeductions" method="post">
                    <div class="row">
                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                            <div class="form-group">
                                <label asp-for="DateFrom" class="control-label"></label>
                                <input required asp-for="DateFrom" class="form-control" type="date" />
                                <span asp-validation-for="DateFrom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                            <div class="form-group">
                                <label asp-for="DateTo" class="control-label"></label>
                                <input required asp-for="DateTo" class="form-control" type="date" />
                                <span asp-validation-for="DateTo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body register-card-body">
                        <div class="form-row">
                            <button type="submit" id="btnsubmit" class="btn btn-success">Export to Excel</button>
                        </div>
                    </div>
                    <div class="card-footer">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#intake_from").val(today);
            $("#intake_to").val(today);

            $('#btn_intake_pdf').on('click', function () {
                let from = $("#intake_from").val();
                let to = $("#intake_to").val();

                var filter = {
                    dateFrom: from,
                    dateTo: to,
                };
                $.ajax({
                    type: 'POST',
                    url: "TIntakePdf",
                    contentType: 'application/json',
                    data: JSON.stringify(filter),
                    success: function (response) {

                    },
                    failure: function (response) {
                    }
                }).then(function () {
                    // ...
                });
            });
        });
    </script>
}