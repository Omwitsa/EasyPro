@model EasyPro.ViewModels.FarmersVM.TransporterChangeVm

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <div class="cmp-tb-hd">
                <h2>Change Transporter</h2>
            </div>
            <hr />
            <form asp-action="ChangeTransporter">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="ReceiptNoFrom" class="control-label"></label>
                            <input asp-for="ReceiptNoFrom" autocomplete="off" class="form-control" />
                            <span asp-validation-for="ReceiptNoFrom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="ReceiptNoTo" class="control-label"></label>
                            <input asp-for="ReceiptNoTo" autocomplete="off" class="form-control" />
                            <span asp-validation-for="ReceiptNoTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Transporter</label>
                            <select asp-for="Code" class="chzn-select form-control" asp-items="@ViewBag.vehicles">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <button type="submit" class="btn btn-success">Change</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            $(".chzn-select").chosen();
        });
    </script>
    }

