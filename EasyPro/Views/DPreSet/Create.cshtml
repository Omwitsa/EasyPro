@model EasyPro.Models.DPreSet

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <div class="cmp-tb-hd">
                <h2>Default Deduction Settings</h2>
            </div>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <input name="all" type="radio" id="allsup" />
                            <label class="control-label">All Suplliers</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <input name="speci" type="radio" id="specific" />
                            <label class="control-label">Specific Suplliers</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <input name="Rate" type="radio" id="Rate" />
                            <label class="control-label">Rate Per Kg Supplied</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <input name="Fixed" type="radio" id="Fixed" />
                            <label class="control-label">Fixed Amount per Month</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Sno" class="control-label"></label>
                            <input id="Sno" asp-for="Sno" class="form-control" />
                            <span asp-validation-for="Sno" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input id="date" type="date" asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Deduction Type</label>
                            <select asp-for="Deduction" required class="form-control" asp-items="@ViewBag.Description">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="Deduction" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Remarks</label>
                            <input id="Remark" asp-for="Remark" class="form-control" />
                            <span asp-validation-for="Remark" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Rate" class="control-label"></label>
                            <input asp-for="Rate" value="0" class="form-control" />
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <button id="save" type="submit" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#date").val(today);
            let isallsup = false;
            let isspecific = false;
            let isRate = false;
            let isFixed = false;
            $("#Sno").val("");
            $("#Remark").val("");
            $('#allsup').prop('checked');

            $('input[type="radio"]').click(function () {
                if ($(this).prop("checked") && $(this).attr('id') == 'allsup') {
                    isspecific = false;
                    isallsup = true;
                    $('#specific').prop('unchecked');
                    $("#Sno").val("");
                    $("#Remark").val("");
                }
                if ($(this).prop("checked") && $(this).attr('id') == 'specific') {
                    isspecific = true;
                    isallsup = false;
                    $('#allsup').prop('unchecked');
                    $("#Sno").val("");
                    $("#Remark").val("");
                }

                if ($(this).prop("checked") && $(this).attr('id') == 'Rate') {
                    isRate = false;
                    isFixed = true;
                    $('#Fixed').prop('unchecked');
                    $("#Sno").val("");
                    $("#Remark").val("");
                }
                if ($(this).prop("checked") && $(this).attr('id') == 'Fixed') {
                    isRate = true;
                    isFixed = false;
                    $('#Rate').prop('unchecked');
                    $("#Sno").val("");
                    $("#Remark").val("");
                }

                $('#save').on('click', function () {
                    $.ajax({
                        type: 'POST',
                        url: "save?isallsup=" + isallsup + "&isspecific=" + isspecific + "&isRate=" + isRate + "&isFixed=" + isFixed,
                        contentType: 'application/json',
                        data: JSON.stringify(saleItems),
                        success: function (response) {
                            if (response.isRedirect) {
                                window.location.href = response.redirectUrl;
                            }
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
                });

            });
        });
    </script>
}