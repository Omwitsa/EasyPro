<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #00ff21;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1050px;
        height: 200px;
        overflow: auto;
    }
</style>

<div class="row">
    <div class="tabs-info-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <div class="widget-tabs-int">
                        <div class="tab-hd">
                            <h3 class="text-danger fa-bold">Cash Sales Report</h3>
                        </div>
                        <div class="widget-tabs-list">
                            <div class="row">
                                <div class="col-sm-2 col-xs-12">
                                    <div class="form-group">
                                        <label class="control-label">DateFrom</label>
                                        <input id="firstdate" type="date" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-2 col-xs-12">
                                    <div class="form-group">
                                        <label class="control-label">DateTo</label>
                                        <input id="enddate" type="date" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-sm-2 col-xs-12">
                                    <label class="control-label">Product</label>
                                    <select id="product" class="chzn-select form-control" asp-items="@ViewBag.products">
                                        <option value=""></option>
                                    </select>
                                </div>
                                <div class="col-sm-2 col-xs-12">
                                    <label class="control-label">Sno</label>
                                    <input id="Sno" class="form-control" />
                                </div>
                                <div class="col-sm-2 col-xs-12">
                                </div>
                                <div class="col-sm-2 col-xs-12">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        <label class="control-label">---</label>
                                        <a asp-controller="AgrovetStockReceive" asp-action="DefaultIndex" class="btn btn-info">Back</a>
                                    </div>
                                </div>
                            </div>
                            
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#cashReport">Report</a></li>
                                <li><a data-toggle="tab" href="#cashSummary">Summary</a></li>
                            </ul>
                            <div class="tab-content tab-custom-st">
                                <div id="cashReport" class="tab-pane fade in active">
                                    <div class="tab-ctn">
                                        <div class="normal-table-list mg-t-30">
                                            <div class="row">
                                                <div class="col-sm-4 col-xs-12">
                                                    <a id="showtable" class="btn btn-warning">Show</a>
                                                </div>
                                                <div class="col-sm-4 col-xs-12">
                                                    <a id="excel_report" class="btn btn-success w3-circle">Export Excel</a>
                                                </div>
                                                <div class="col-sm-4 col-xs-12">

                                                </div>
                                                <div class="col-sm-4 col-xs-12">
                                                    <label class="control-label">--</label>
                                                    <a id="print_report" class="btn btn-success w3-circle">Print Report</a>
                                                </div>
                                            </div>
                                            
                                            <div class="bsc-tbl-hvr table-border-style">
                                                <div class="table-responsive">
                                                    <div class="divScroll">
                                                        <table class="table table-hover" id="tbl_rep_report">
                                                            <tr id="com"><th></th><th colspan="4" id="company"></th></tr>
                                                            <tr id="htitl"><th></th> <th colspan="4"> <strong>STORE CASH SALES REPORT</strong></th></tr>
                                                            <tr id="hstartd"><th></th><th colspan="4" id="sema"></th>  </tr>
                                                            <tr id="huser"><th></th><th colspan="4" hidden id="user"></th>  </tr>
                                                            <tr id="her"><th colspan="7"><hr /></th></tr>
                                                            <tr>
                                                                <th>Date</th>
                                                                <th>Receipt No.</th>
                                                                <th>Code</th>
                                                                <th>Product</th>
                                                                <th>SNo</th>
                                                                <th>Quantity</th>
                                                                <th>Amount</th>
                                                                <th>TransBy</th>
                                                                <th>User</th>
                                                                <th>Branch</th>
                                                                <th>Sales Type</th>
                                                            </tr>
                                                            <tbody id="tbl_rep_details">
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-4 col-xs-12">
                                                    </div>
                                                    <div class="col-sm-4 col-xs-12">
                                                        <label class="control-label">Total SPrice</label>
                                                        <input value="0" id="Tselling" class="form-control" readonly />
                                                    </div>
                                                    <div class="col-sm-4 col-xs-12">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div id="cashSummary" class="tab-pane fade">
                                    <div class="tab-ctn">
                                        <div class="normal-table-list mg-t-30">
                                            <div class="row">
                                                <div class="col-sm-3 col-xs-12">
                                                    <a id="showSummery" class="btn btn-warning">Show</a>
                                                </div>
                                                <div class="col-sm-3 col-xs-12">
                                                    <a id="excel_summery" class="btn btn-success">Export Excel</a>
                                                </div>
                                                <div class="col-sm-2 col-xs-12">

                                                </div>
                                                <div class="col-sm-3 col-xs-12">
                                                    <label class="control-label">--</label>
                                                    <a id="print_report1" class="btn btn-success w3-circle">Print Report</a>
                                                </div>
                                            </div>
                                            
                                            <div class="bsc-tbl-hvr table-border-style">
                                                <div class="table-responsive">
                                                    <div class="divScroll">
                                                        <table class="table table-hover" id="tbl_summary">
                                                            <tr id="com1"><th></th><th colspan="4" id="company1"></th></tr>
                                                            <tr id="htitl1"><th></th> <th colspan="4"> <strong>STORE CASH SUMMARY SALES REPORT</strong></th></tr>
                                                            <tr id="hstartd1"><th></th><th colspan="4" id="sema1"></th>  </tr>
                                                            <tr id="huser1"><th></th><th colspan="4" hidden id="user1"></th>  </tr>
                                                            <tr id="her1"><th colspan="7"><hr /></th></tr>
                                                            <tr>
                                                                <th>Date</th>
                                                                <th>Code</th>
                                                                <th>Product</th>
                                                                <th>SNo</th>
                                                                <th>Quantity</th>
                                                                <th>Amount</th>
                                                            </tr>
                                                            <tbody id="tbl_sum_details">
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-sm-4 col-xs-12">
                                                    </div>
                                                    <div class="col-sm-4 col-xs-12">
                                                        <label class="control-label">Total SPrice</label>
                                                        <input value="0" id="Tsell" class="form-control" readonly />
                                                    </div>
                                                    <div class="col-sm-4 col-xs-12">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script type="text/javascript">
        $(function () {
            $(".chzn-select").chosen();
            var today = new Date().toISOString().split('T')[0];
            $("#firstdate").val(today);
            $("#enddate").val(today);
            $("#com").hide();
            $("#htitl").hide();
            $("#hstartd").hide();
            $("#huser").hide();
            $("#her").hide();
            $("#com1").hide();
            $("#htitl1").hide();
            $("#hstartd1").hide();
            $("#huser1").hide();
            $("#her1").hide();

            $('#excel_report').on('click', function () {
                heading();
                let date = new Date().toLocaleDateString('en-GB');
                let fileName = `Cash Report ${date}`;
                $('#tbl_rep_report').table2excel({ filename: fileName, fileext: ".xls" });
            });

             function heading()
            {
                var  company = @Html.Raw(Json.Serialize(ViewBag.Sacco));
                var  user = @Html.Raw(Json.Serialize(ViewBag.User));
                var date1 = $("#firstdate").val();
                var date10 = new Date(date1).toLocaleDateString();
                var date2 = $("#enddate").val();
                var date20 = new Date(date2).toLocaleDateString();
                var sm = "FROM  :" +  date10  + "  TO  :" + date20 ;
                var usa = "Printed By  :" + user ;
                //$("#sema").val(sm);
                let itemTableRows1 = new Array();
                let itemTableRow = new Array();
                let itemTableRows2 = new Array();
                itemTableRow.push(`${company}`);
                $('#company').html(itemTableRow);
                itemTableRows1.push(`${sm}`);
                $('#sema').html(itemTableRows1);
                itemTableRows2.push(`${usa}`);
                $('#user').html(itemTableRows2);
            }
             function heading1()
            {
                var  company = @Html.Raw(Json.Serialize(ViewBag.Sacco));
                var  user = @Html.Raw(Json.Serialize(ViewBag.User));
                var date1 = $("#firstdate").val();
                var date10 = new Date(date1).toLocaleDateString();
                var date2 = $("#enddate").val();
                var date20 = new Date(date2).toLocaleDateString();
                var sm = "FROM  :" +  date10  + "  TO  :" + date20 ;
                var usa = "Printed By  :" + user ;
                //$("#sema").val(sm);
                let itemTableRows1 = new Array();
                let itemTableRow = new Array();
                let itemTableRows2 = new Array();
                itemTableRow.push(`${company}`);
                $('#company1').html(itemTableRow);
                itemTableRows1.push(`${sm}`);
                $('#sema1').html(itemTableRows1);
                itemTableRows2.push(`${usa}`);
                $('#user1').html(itemTableRows2);
            }

            $('#print_report').on('click', function () {
                $("#com").show();
                $("#htitl").show();
                $("#hstartd").show();
                $("#huser").show();
                $("#her").show();
                heading();
                var divToPrint = document.getElementById("tbl_rep_report");
                newWin = window.open("");
                newWin.document.write(divToPrint.outerHTML);
                newWin.print();
                newWin.close();
                $("#com").hide();
                $("#htitl").hide();
                $("#hstartd").hide();
                $("#huser").hide();
                $("#her").hide();
            });
            $('#print_report1').on('click', function () {
                $("#com1").show();
                $("#htitl1").show();
                $("#hstartd1").show();
                $("#huser1").show();
                $("#her1").show();
                heading1();
                var divToPrint = document.getElementById("tbl_summary");
                newWin = window.open("");
                newWin.document.write(divToPrint.outerHTML);
                newWin.print();
                newWin.close();
                $("#com1").hide();
                $("#htitl1").hide();
                $("#hstartd1").hide();
                $("#huser1").hide();
                $("#her1").hide();
            });
            $('#excel_summery').on('click', function () {
                let date = new Date().toLocaleDateString('en-GB');
                let fileName = `Cash Summery ${date}`;
                $('#tbl_summary').table2excel({ filename: fileName, fileext: ".xls" });
            });

            $("#showtable").click(function () {
                var startDate = $("#firstdate").val();
                var endDate = $("#enddate").val();
                var zone = $("#zone").val() ? $("#zone").val() : "";
                var product = $("#product").val() ? $("#product").val() : "";
                var sno = $("#Sno").val() ? $("#Sno").val() : "";
                $.ajax(
                    {
                        type: 'POST',
                        url: `cashreport?startDate=${startDate}&endDate=${endDate}&product=${product}&sno=${sno}`,
                        contentType: 'application/json',
                        success: function (response) {
                            populateReports(response)
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
            });

            $("#showSummery").click(function () {
                var startDate = $("#firstdate").val();
                var endDate = $("#enddate").val();
                var zone = $("#zone").val() ? $("#zone").val() : "";
                var product = $("#product").val() ? $("#product").val() : "";
                var sno = $("#Sno").val() ? $("#Sno").val() : "";
                $.ajax(
                    {
                        type: 'POST',
                        url: `cashSummary?startDate=${startDate}&endDate=${endDate}&product=${product}&sno=${sno}`,
                        contentType: 'application/json',
                        success: function (response) {
                            response = response ? response : []
                            populateSummary(response)
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
            });

            function populateReports(intakes) {
                let itemTableRows = new Array();
                $('#Tbuying').val('0');
                $('#Tselling').val('0');
                $('#TPL').val('0');
                let Tselling = 0;
                intakes.forEach(i => {
                    Tselling += i.Amount;
                    let type = "Cash";
                    let dd1 = new Date(i.TDate).toLocaleDateString();
                    itemTableRows.push(`<tr>
                                    <td>${dd1}</td>
                                    <td>${i.RNo}</td>
                                    <td>${i.PCode}</td>
                                    <td>${i.Remarks}</td>
                                    <td>'${i.SNo}</td>
                                    <td>${i.Qua}</td>
                                    <td>${i.Amount}</td>
                                    <td>${i.Transby}</td>
                                    <td>${i.UserId}</td>
                                    <td>${i.Branch}</td>
                                    <td>${type}</td>
                                </tr>`)

                });

                $('#Tselling').val(Tselling);
                $('#tbl_rep_details').html(itemTableRows);
            }

            function populateSummary(summary) {
                let itemTableRows = new Array();
                $('#Tbuying').val('0');
                $('#Tsell').val('0');
                $('#TPL').val('0');
                let Tselling = 0;
                summary.forEach(i => {
                    i.sno = i.sno ? i.sno : "";
                    i.product = i.product ? i.product : "";
                    Tselling += i.amount;
                    let dd1 = new Date(i.date).toLocaleDateString();
                    itemTableRows.push(`<tr>
                        <td>${dd1}</td>
                        <td>${i.product}</td>
                        <td>${i.productName}</td>
                        <td>'${i.sno}</td>
                        <td>${i.quantity}</td>
                        <td>${i.amount}</td>
                    </tr>`)
                });

                $('#Tsell').val(Tselling);
                $('#tbl_sum_details').html(itemTableRows);
            }

        });
</script>
}
