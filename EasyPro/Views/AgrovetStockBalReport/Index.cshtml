@model IEnumerable<EasyPro.Models.AgReceipt>

@{
    ViewData["Title"] = "Index";
}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #00ff21;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1050px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-sm-2 col-xs-12 cmp-tb-hd">

                    </div>
                    <div class="col-sm-6 col-xs-12" id="zone1">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <h1 style="text-align-last:center">Stock Balance Report</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-12">
                        <label class="control-label">Product</label>
                        <select id="product" class="chzn-select form-control" asp-items="@ViewBag.products">
                            <option value=""></option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">DateFrom</label>
                                <input id="firstdate" type="date" class="form-control" />
                            </div>
                    </div>
                    <div class="col-sm-2 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">DateTo</label>
                                <input id="enddate" type="date" class="form-control" />
                            </div>
                    </div>
                    <div class="col-sm-2 col-xs-12">
                        <div class="col-sm-2 col-xs-12">
                            <label class="control-label">-</label>
                            <a id="showtable" class="btn btn-warning">Show</a>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="col-sm-2 col-xs-12 ">
                            <label class="control-label">---</label>
                            <a id="excel_report" class="btn btn-success w3-circle">Export Excel</a>
                        </div>
                        <div class="col-sm-3 col-xs-12">

                        </div>
                        <div class="col-sm-2 col-xs-12">
                            <label class="control-label">--</label>
                            <a id="print_report" class="btn btn-success w3-circle">Print Report</a>
                        </div>
                    </div>

                        <div class="col-sm-2 col-xs-12">
                            <div class="col-sm-2 col-xs-12">
                                <label class="control-label">-</label>
                                <a asp-controller="AgrovetStockReceive" asp-action="DefaultIndex" class="btn btn-info">Back</a>
                            </div>
                        </div>
                    </div>
                <div class="bsc-tbl-hvr table-border-style">
                    <div class="table-responsive">
                        <div class="divScroll">
                            <table class="table table-hover" id="customers">
                                <tr id="com"><th colspan="4" id="company"></th></tr>
                                <tr id="htitl"><th></th> <th colspan="4"> <strong>STORE BALANCE REPORT</strong></th></tr>
                                <tr id="hstartd"><th></th><th colspan="4" id="sema"></th>  </tr>
                                <tr id="huser"><th></th><th colspan="4" hidden id="user"></th>  </tr>
                                <tr id="companyname"><th></th><th colspan="4">Amtech Technologies ltd</th>  </tr>
                                <tr id="her"><th colspan="7"><hr /></th></tr>

                                <tr>
                                    <th>Code</th>
                                    <th>Product</th>
                                    <th>Openning this Month</th>
                                    <th>Added Stock</th>
                                    <th>Dispatch Stock</th>
                                    <th>Stock Bal</th>
                                    <th>Sales</th>
                                    <th>Bal</th>
                                    <th>Buying Price</th>
                                    <th>Selling Price</th>
                                    <th>Stock Value</th>
                                    <th>Sales Value</th>
                                    <th>Profit</th>
                                    <th>Branch</th>
                                </tr>
                                <tbody id="intakes">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-xs-12">
                            <label class="control-label">Total Stock Bal Amount</label>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <input id="amount" class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#firstdate").val(today);
            $("#enddate").val(today);
            $('#amount').val(0);
            $("#com").hide();
            $("#htitl").hide();
            $("#hstartd").hide();
            $("#huser").hide();
            $("#her").hide();
            $("#companyname").hide();
            $(".chzn-select").chosen();

            $('#excel_report').on('click', function () {
                heading();
                let date = new Date().toLocaleDateString('en-GB');
                let fileName = `Stock Balance Report ${date}`;
                $('#customers').table2excel({ filename: fileName, fileext: ".xls" });
            });
            function heading()
            {
                var  company = @Html.Raw(Json.Serialize(ViewBag.Sacco));
                var  user = @Html.Raw(Json.Serialize(ViewBag.User));
                var date1 = $("#firstdate").val();
                var date10 = new Date(date1).toLocaleDateString();
                var date2 = $("#enddate").val();
                var date20 = new Date(date2).toLocaleDateString();
                var sm = "FROM  :" +  date10  + "  TO  :" + date20 ;
                var usa = "Printed By  :" + user ;
                //$("#sema").val(sm);
                let itemTableRows1 = new Array();
                let itemTableRow = new Array();
                let itemTableRows2 = new Array();
                itemTableRow.push(`${company}`);
                $('#company').html(itemTableRow);
                itemTableRows1.push(`${sm}`);
                $('#sema').html(itemTableRows1);
                itemTableRows2.push(`${usa}`);
                $('#user').html(itemTableRows2);
            }
            $('#print_report').on('click', function () {
                $("#com").show();
                $("#htitl").show();
                $("#hstartd").show();
                $("#huser").show();
                $("#her").show();
                $("#companyname").show();
                heading();
                var divToPrint = document.getElementById("customers");
                newWin = window.open("");
                newWin.document.write(divToPrint.outerHTML);
                newWin.print();
                newWin.close();
                $("#com").hide();
                $("#htitl").hide();
                $("#hstartd").hide();
                $("#huser").hide();
                $("#her").hide();
                $("#companyname").hide();
            });

            $("#showtable").click(function () {
                var date1 = $("#firstdate").val();
                var date2 = $("#enddate").val();
                var zone = $("#zone").val();
                var product = $("#product").val();
                debugger
                zone = zone ? zone : "";
                $.ajax(
                    {
                        type: 'POST',
                        url: "suppliedProducts?date1=" + date1 + "&date2=" + date2 + "&product=" + product,
                        contentType: 'application/json',
                        success: function (response) {
                            populateIntake(response)
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
            });

            function populateIntake(intakes) {
                let itemTableRows = new Array();
                    var netpay = 0;
                    var salesamount = 0;
                    var costofsales = 0;
                var stockvalue = 0;
                var profit = 0;
                var Totalprofit = 0;
                var buy = 0;
                debugger
                intakes.forEach(i => {

                    var ddate = i.Date;
                    var BPrice = i.BPrice;
                    costofsales = i.SPrice * i.Sales;
                    stockvalue = i.BPrice * i.Bal;
                    buy = i.BPrice * i.Sales;
                    profit = costofsales - buy;
                    netpay += stockvalue;
                    salesamount += costofsales;
                    Totalprofit += profit;
                    itemTableRows.push(`<tr>

                                <td>${i.Code}</td>
                                <td>${i.Name}</td>
                                <td>${i.Openning}</td>
                                <td>${i.AddedStock}</td>
                                <td>${i.Dispatch}</td>
                                <td>${i.StoreBal}</td>
                                <td>${i.Sales }</td>
                                <td>${i.Bal}</td>
                                <td>${BPrice}</td>
                                <td>${i.SPrice}</td>
                                <td>${stockvalue}</td>
                                <td>${costofsales}</td>
                                <td>${profit}</td>
                                <td>${i.Branch}</td>
                            </tr>`)



                });
                itemTableRows.push(`<tr>
                              <td colspan="4"><h3>Total Stock Bal Amount</h3></td>
                               <td>${netpay}</td>
                          </tr>`);
                    itemTableRows.push(`<tr>
                               <td colspan="4"><h3>Total Stock Sales Amount</h3></td>
                               <td>${salesamount}</td>
                               </tr>`);
                itemTableRows.push(`<tr>
                               <td colspan="4"><h3>Total Profit</h3></td>
                               <td>${Totalprofit}</td>
                               </tr>`);

                $('#intakes').html(itemTableRows);
            }
        });
    </script>
}


