@model IEnumerable<EasyPro.Models.DSupplier>
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #00ff21;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #04AA6D;
                color: white;
            }
        .divScroll {
            width: 1110px;
            height: 500px;
            overflow: auto;
        }
    </style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <h3 class="text-danger fa-bold">UnApproved Suppliers</h3>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                        <form method="get" asp-action="Index">
                            <input type="search" placeholder="Search here" value="@ViewData["Getsuppliers"]" name="Search" />
                            <button type="submit" class="btn btn-success">Search</button>
                            <a asp-action="Index">Show All</a>
                        </form>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="divScroll">
                    <div class="table-responsive">
                        <table class="table table-hover" id="customers">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Sno)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Regdate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Names)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AccNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Branch)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Active)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="geeks">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sno)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Regdate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Names)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AccNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Branch)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                        <td class="col-4">
                                            <a class="btn-warning btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            @*<a class="btn-danger btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>
            </div>
    </div>
</div>
