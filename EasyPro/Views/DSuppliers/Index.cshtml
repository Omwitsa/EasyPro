@model EasyPro.Utils.PaginatedList<EasyPro.Models.DSupplier>
@{
    ViewData["Title"] = "Export Excel";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <h3 class="text-danger fa-bold">Suppliers</h3>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input id="gfg" type="text" class="form-control"
                           placeholder="Search here">
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <a asp-action="Create" class="btn btn-primary">Create New</a>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    @if (ViewBag.setupRole)
                    {
                        <a asp-action="UnApprovedList" class="btn btn-primary">UnApproved Suppliers</a>
                    }
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Supplier No.
                                </th>
                                <th>
                                    Reg date
                                </th>
                                <th>
                                    Names
                                </th>
                                <th>
                                    Id No.
                                </th>
                                <th>
                                    Account No.
                                </th>
                                <th>
                                    Location
                                </th>
                                <th>
                                    Branch
                                </th>
                                <th>
                                    Phone No.
                                </th>
                                <th>
                                    Active
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="geeks">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Regdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Names)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AccNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    <td class="col-4">
                                        <a class="btn-warning btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        @*<a class="btn-danger btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }

                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       class="btn btn-default @prevDisabled">
                        Previous
                    </a>
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       class="btn btn-default @nextDisabled">
                        Next
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#gfg").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#geeks tr").filter(function () {
                    $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
