@model EasyPro.Utils.PaginatedList<EasyPro.Models.DSupplier>
@{
    ViewData["Title"] = "Export Excel";
}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }

    .divScroll {
        width: 1110px;
        height: 500px;
        overflow: auto;
    }
</style>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-3">

            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <h4 class="text-danger fa-bold"><i class="fas fa-bars"></i>Suppliers</h4>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <div class="form-group">
                        <select id="condition" class="form-control" >
                            <option></option>
                            <option>SNo</option>
                            <option>Name</option>
                            <option>IdNo</option>
                            <option>Phone</option>
                            <option>AccNo</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <input id="filter" autocomplete="off" placeholder="Search" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-user"></i>Create New</a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <a asp-action="UnApprovedList" class="btn btn-primary">Unapproved Suppliers</a>
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <div class="divScroll">
                        <table class="table table-hover" id="customers">
                            <thead>
                                <tr>
                                    <th>
                                        Supplier No.
                                    </th>
                                    <th>
                                        Reg date
                                    </th>
                                    <th>
                                        Names
                                    </th>
                                    <th>
                                        Id No.
                                    </th>
                                    <th>
                                        Account No.
                                    </th>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                        Branch
                                    </th>
                                    <th>
                                        Phone No.
                                    </th>
                                    <th>
                                        Active
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="intakes">
                            </tbody>
                            
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script type="text/javascript">
    $(function () {
        getSelectedDateIntakes();
            $('#condition').click(function () {
                getSelectedDateIntakes();
            });
            $('#filter').on('keyup', function () {
                getSelectedDateIntakes();
            });
            function getSelectedDateIntakes() {
                var filter = $("#filter").val();
                var condition = $("#condition").val();
                    $.ajax({
                        type: 'POST',
                        url: "getsuppliers?filter=" + filter + "&condition=" + condition ,
                        contentType: 'application/json',
                        success: function (response) {
                            populateIntake(response)
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
                //}
            }
            function populateIntake(intakes) {
                var filter = $("#filter").val();
                var condition = $("#condition").val();
                let itemTableRows = new Array();
                intakes.forEach(i => {
                    //debugger;
                    var ddate = i.Regdate;
                    var d ="/DSuppliers/Edit/" + i.Id;
                    var dd1 = new Date(ddate).toLocaleDateString();
                    var edit = "<a class='btn btn-success text-white' href="+ d +"  >Edit</a >";
                    itemTableRows.push(`<tr>
                                <td>${i.Sno}</td>
                                <td>${dd1}</td>
                                <td>${i.Names}</td>
                                <td>${i.IdNo}</td>
                                <td>${i.AccNo}</td>
                                <td>${i.Location}</td>
                                <td>${i.Branch}</td>
                                <td>${i.PhoneNo}</td>
                                <td>${i.Active}</td>
                                <td>${edit}</td>
                            </tr>`)
                });

                $('#intakes').html(itemTableRows);
            }
        });
</script>
}
