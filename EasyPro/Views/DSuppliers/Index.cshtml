@model EasyPro.Utils.PaginatedList<EasyPro.Models.DSupplier>
@{
    ViewData["Title"] = "Export Excel";
}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
    .divScroll {
        width: 1110px;
        height: 500px;
        overflow: auto;
    }
</style>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-3">
            
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" >
                    <h4 class="text-danger fa-bold"><i class="fas fa-bars"></i>Suppliers</h4>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                    <form method="get" asp-action="Index">
                        <input type="search" placeholder="Search here" value="@ViewData["Getsuppliers"]" name="Search" />
                        <button type="submit" class="btn btn-success">Search</button>
                        <a asp-action="Index">Show All</a>
                    </form>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-user"></i>Create New</a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" >
                    @if (ViewBag.setupRole)
                    {
                        <a asp-action="UnApprovedList" class="btn btn-primary">UnApproved Suppliers</a>
                    }
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="divScroll">
                    <div class="table-responsive">
                        <table class="table table-hover" id="customers">
                            <thead>
                                <tr>
                                    <th>
                                        Supplier No.
                                    </th>
                                    <th>
                                        Reg date
                                    </th>
                                    <th>
                                        Names
                                    </th>
                                    <th>
                                        Id No.
                                    </th>
                                    <th>
                                        Account No.
                                    </th>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                        Branch
                                    </th>
                                    <th>
                                        Phone No.
                                    </th>
                                    <th>
                                        Active
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="geeks">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sno)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Regdate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Names)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AccNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Branch)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                        <td class="col-4">
                                            <a class="btn-warning btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            @*<a class="btn-danger btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @{
                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                        }

                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           class="btn btn-default @prevDisabled">
                            Previous
                        </a>
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           class="btn btn-default @nextDisabled">
                            Next
                        </a>
                    </div>
                </div>

            </div>
            </div>
        </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#gfg").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#geeks tr").filter(function () {
                    $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
