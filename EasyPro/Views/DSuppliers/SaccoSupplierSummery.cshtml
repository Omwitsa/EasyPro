@model IEnumerable<EasyPro.ViewModels.SuppliersVm>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <h3 class="text-danger fa-bold">Suppliers Summery</h3>
                </div>
               @* <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <input id="gfg" type="text" class="form-control"
                           placeholder="Search here">
                </div>*@
                @*<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-right">
                    <a asp-action="Create" class="btn btn-primary">Create New</a>
                </div>*@
            </div>

            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sacco)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Suppliers)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="geeks">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sacco)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Suppliers)
                                    </td>
                                    <td>
                                        <a asp-action="SaccoSuppliers" asp-route-id="@item.Sacco">More</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
