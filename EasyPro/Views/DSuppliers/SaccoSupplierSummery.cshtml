@model EasyPro.ViewModels.SupplierSummeryVm

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <h3 class="text-danger fa-bold">Suppliers Summery</h3>
                </div>
               @* <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <input id="gfg" type="text" class="form-control"
                           placeholder="Search here">
                </div>*@
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-right">
                    <a asp-controller="Report" asp-action="ExportAllSuppliers" class="btn btn-success">Export All to Excel</a>
                </div>
            </div>

            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <div>
                        <strong>Total Suppliers:</strong>
                        <span>@Model.TotalSupplies</span>
                        &nbsp; &nbsp; &nbsp;
                        <strong>Male:</strong>
                        <span>@Model.TotalMale</span>
                        &nbsp; &nbsp; &nbsp;
                        <strong>Female</strong>
                        <span>@Model.TotalFemale</span>
                    </div>
                    @foreach(var county in Model.countySuppliers){
                        <div>
                            <hr />
                            <strong>County:</strong>
                            <span>@county.County</span>
                            &nbsp; &nbsp; &nbsp;
                            <strong>Total Suppliers:</strong>
                            <span>@county.TotalSupplies</span>
                            &nbsp; &nbsp; &nbsp;
                            <strong>Male:</strong>
                            <span>@county.TotalMale</span>
                            &nbsp; &nbsp; &nbsp;
                            <strong>Female:</strong>
                            <span>@county.TotalFemale</span>
                        </div> <hr />

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                       POs
                                    </th>
                                    <th>
                                        Suppliers
                                    </th>
                                    <th>
                                        Male
                                    </th>
                                    <th>
                                        Female
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="geeks">
                                @foreach (var sacco in county.suppliers)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => sacco.Sacco)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sacco.Suppliers)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sacco.Male)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sacco.Female)
                                        </td>
                                        <td>
                                            <a asp-action="SaccoSuppliers" asp-route-id="@sacco.Sacco">More</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
