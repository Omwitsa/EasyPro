@model EasyPro.ViewModels.CountyReportsVM
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #00ff21;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1050px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">


            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 cmp-tb-hd">
                    <h2>PO Details Enquiry</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">DateFrom</label>
                        <input id="sacco" type="text" value="@ViewBag.sacco" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-3 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Month</label>
                        <input id="enddate" type="date" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <div class="divScroll">
                        <table class="table table-hover" id="customers">
                            <tr>
                                <th>Type</th>
                                <th>Amount</th>
                            </tr>
                            <tbody id="intakes">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#enddate").val(today);
            var checkd = @Html.Raw(Json.Serialize(ViewBag.sacco));
            $('#sacco').val(checkd);
            $('#enddate').change(function () {
                //var selectVal = $("#branch").val();
                getSelectedDateIntakes();
            });
            function getSelectedDateIntakes() {
                var intake = {
                     date2: $("#enddate").val(),
                     sacco:$("#sacco").val(),
                }
                    $.ajax({
                        type: 'POST',
                        url: "/DSuppliers/getdetails",
                        contentType: 'application/json',
                        data: JSON.stringify(intake),
                        success: function (response) {
                            populateIntake(response)
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
            }
            function populateIntake(intake) {
                let itemTableRows = new Array();
                debugger
                intake.CountyReports.forEach(i => {
                    itemTableRows.push(`<tr>
                                            <td>${i.Type}</td>
                                            <td>${i.Amount}</td>
                                       </tr>`)
                            });
                itemTableRows.push(`<tr>Expense</tr>`)
                itemTableRows.push(`<tr> <td>${intake.Expense}</td></tr>`)
                itemTableRows.push(`<tr>InCome</tr>`)
                itemTableRows.push(`<tr> <td>${intake.Income}</td></tr>`)
                $('#intakes').html(itemTableRows);
            }
        });
    </script>
}