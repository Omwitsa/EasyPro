            function getsharesreport() {
                $("#product").empty();
                var branch = $("#branchlist").val();
                $.ajax(
                    {
                        type: 'POST',
                        url: "getproductsreport?branch=" + branch,
                        contentType: 'application/json',
                        success: function (response) {
                            let products = response;
                            $('#product').append($('<option>').val('').text(''));
                            $.each(products, function () {
                                $('#product').append($("<option />").val(this.PName).text(this.PName));
                            });
                            $('#product').chosen();
                            $("#product").trigger("chosen:updated");
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
            }
            $('#branchlist').on('change', function () {
                getsharesreport();
            });

            $("#showtable").click(function () {
                var startDate = $("#firstdate").val();
                var endDate = $("#enddate").val();
                var salestype = $("#salestype").val();
                var zone = $("#zone").val() ? $("#zone").val() : "";
                var product = $("#product").val() ? $("#product").val() : "";
                var branchlist = $("#branchlist").val();
                $.ajax(
                    {
                        type: 'POST',
                        url: `allSalesreport?startDate=${startDate}&endDate=${endDate}&product=${product}&salestype=${salestype}&branchlist=${branchlist}`,
