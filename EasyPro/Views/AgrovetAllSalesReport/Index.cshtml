            function populateReports(intakes) {
                let itemTableRows = new Array();
                $('#Tbuying').val('0');
                $('#Tselling').val('0');
                $('#TPL').val('0');
                let Tselling = 0;
                let quntity = 0;
                let totalquntity = 0;
                intakes.forEach(i => {
                    Tselling += i.Amount;
                    quntity = i.Qua;
                    if (i.Amount < 0) {
                        quntity = quntity * -1;
                    }
                    totalquntity += quntity;
                    let type = "All";
                    let dd1 = new Date(i.TDate).toLocaleDateString();
                    itemTableRows.push(`<tr>
                                                <td>${dd1}</td>
                                                <td>${i.RNo}</td>
                                                <td>${i.PCode}</td>
                                                <td>${i.Remarks}</td>
                                                <td>'${i.SNo}</td>
                                                <td>${quntity}</td>
                                                <td>${i.Amount}</td>
                                                <td>${i.Transby}</td>
                                                <td>${i.UserId}</td>
                                                <td>${i.Branch}</td>
                                                <td>${type}</td>
                                            </tr>`)
                });
                itemTableRows.push(`<tr>
                                            <td colspan="5"><h3>Total</h3></td>
                                                <td>${totalquntity}</td>
                                                <td>${Tselling}</td>
                                            </tr>`);
                $('#Tselling').val(Tselling);
                $('#totalquntity').val(totalquntity);
                $('#tbl_rep_details').html(itemTableRows);
            }

            function populateSummary(summary) {
                let itemTableRows = new Array();
                $('#Tbuying').val('0');
                $('#Tselling').val('0');
                $('#TPL').val('0');
                let quntity = 0;
                let totalquntity = 0;
                let Tselling = 0;
                summary.forEach(i => {
                    i.sno = i.sno ? i.sno : "";
                    i.product = i.product ? i.product : "";
                    quntity = i.quantity;
                    if (i.amount < 0) {
                        quntity = quntity * -1;
                    }
                    totalquntity += quntity;
                    Tselling += i.amount;
                    let dd1 = new Date(i.date).toLocaleDateString();
                    itemTableRows.push(`<tr>
                                                <td>${dd1}</td>
                                                <td>${i.product}</td>
                                                <td>${i.productName}</td>
                                                <td>${quntity}</td>
                                                <td>${i.amount}</td>
                                            </tr>`)
                });
                itemTableRows.push(`<tr>
                                            <td colspan="3"><h3>Total</h3></td>
                                                <td>${totalquntity}</td>
                                                <td>${Tselling}</td>
                                            </tr>`);
                $('#Tsell').val(Tselling);
                $('#totquntity').val(totalquntity);
                $('#tbl_sum_details').html(itemTableRows);
            }

            function populateSummarydetailed(summary) {
                let itemTableRows = new Array();
