@model EasyPro.Models.DPrice

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>DPrice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Edate" class="control-label"></label>
                        <input required type="date" asp-for="Edate" class="form-control" />
                        <span asp-validation-for="Edate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Price" class="control-]label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Products" class="control-label"></label>
                        <select asp-for="Products" class="form-control" asp-items="@ViewBag.products">
                            <option value="" disabled selected hidden>Please select</option>
                        </select>
                        <span asp-validation-for="Products" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="SubsidyQty" class="control-]label"></label>
                        <input asp-for="SubsidyQty" class="form-control" />
                        <span asp-validation-for="SubsidyQty" class="text-danger"></span>
                    </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="DrAccNo" class="control-]label"></label>
                                <select id="draccno" asp-for="DrAccNo" class="form-control" asp-items="@ViewBag.DrAccNo">
                                    <option value="" disabled selected hidden>Please select</option>
                                </select>
                                <span asp-validation-for="DrAccNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">SubsidyPrice</label>
                                <input asp-for="SubsidyPrice" class="form-control" />
                                <span asp-validation-for="SubsidyPrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="CrAccNo" class="control-]label"></label>
                                <select id="craccno" asp-for="CrAccNo" class="form-control" asp-items="@ViewBag.CrAccNo">
                                    <option value="" disabled selected hidden>Please select</option>
                                </select>
                                <span asp-validation-for="CrAccNo" class="text-danger"></span>
                            </div>
                        </div>                       
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script type="text/javascript">
        $(function () {
            $('#draccno').on('change', function () {
                debugger;
                var draccno = @Html.Raw(Json.Serialize(ViewBag.DR));
