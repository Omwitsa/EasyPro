@model EasyPro.Models.DPrice

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <div class="cmp-tb-hd">
                <h2>Edit</h2>
            </div>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Edate" class="control-label"></label>
                            <input required type="date" asp-for="Edate" class="form-control" />
                            <span asp-validation-for="Edate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Products" class="control-label"></label>
                            <select asp-for="Products" class="form-control" asp-items="@ViewBag.products">
                                <option value="" disabled selected hidden>Please select</option>
                            </select>
                            <span asp-validation-for="Products" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" autocomplete="off" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="SubsidyPrice" class="control-label">SubsidyPrice</label>
                            <input asp-for="SubsidyPrice" autocomplete="off" class="form-control" />
                            <span asp-validation-for="SubsidyPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="SubsidyQty" class="control-label"></label>
                            <input asp-for="SubsidyQty" autocomplete="off" class="form-control" />
                            <span asp-validation-for="SubsidyQty" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Interest" class="control-label">Interest (%)</label>
                            <input asp-for="Interest" type="text" autocomplete="off" class="form-control" />
                            <span asp-validation-for="Interest" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="TransportersPrice" class="control-label">Transporters Price</label>
                            <input asp-for="TransportersPrice" type="text" autocomplete="off" class="form-control" />
                            <span asp-validation-for="TransportersPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="TradersPrice" class="control-label">Traders Price</label>
                            <input asp-for="TradersPrice" type="text" autocomplete="off" class="form-control" />
                            <span asp-validation-for="TradersPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label asp-for="OtherTradersPrice" class="control-label">Other Traders Price </label>
                            <input asp-for="OtherTradersPrice" type="text" autocomplete="off" class="form-control" />
                            <span asp-validation-for="OtherTradersPrice" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="DrAccNo" class="control-label"></label>
                            <select id="draccno" asp-for="DrAccNo" class="form-control" asp-items="@ViewBag.glAccounts">
                                <option value="" disabled selected hidden>Please select</option>
                            </select>
                            <span asp-validation-for="DrAccNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="CrAccNo" class="control-label"></label>
                            <select id="craccno" asp-for="CrAccNo" class="form-control" asp-items="@ViewBag.glAccounts">
                                <option value="" disabled selected hidden>Please select</option>
                            </select>
                            <span asp-validation-for="CrAccNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="TransportDrAccNo" class="control-label"></label>
                            <select asp-for="TransportDrAccNo" class="form-control" asp-items="@ViewBag.glAccounts">
                                <option value="" disabled selected hidden>Please select</option>
                            </select>
                            <span asp-validation-for="TransportDrAccNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="TransportCrAccNo" class="control-label"></label>
                            <select asp-for="TransportCrAccNo" class="form-control" asp-items="@ViewBag.glAccounts">
                                <option value="" disabled selected hidden>Please select</option>
                            </select>
                            <span asp-validation-for="TransportCrAccNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
