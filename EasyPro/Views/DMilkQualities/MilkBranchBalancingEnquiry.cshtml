@*@model EasyPro.ViewModels.MilkBranchControlListVM*@
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #00ff21;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1050px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-element-list mg-t-30">
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 cmp-tb-hd">
                        <h2>Branch Milk Balancing Enquiry</h2>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12" id="zone1">
                        <div class="form-group ic-cmp-int float-lb floating-lb">
                            <div class="nk-int-st">
                                <label class="control-label">Branch</label>
                                <select id="branch" Value="Select Bank" class="form-control" asp-items="@ViewBag.brances" required>
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">DateFrom</label>
                            <input id="firstdate" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">DateTo</label>
                            <input id="enddate" type="date" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="bsc-tbl-hvr table-border-style">
                    <div class="table-responsive">
                        <div class="divScroll">
                            <table class="table table-hover" id="customers">
                                <tr>
                                    <th>Date</th>
                                    <th>Bf</th>
                                    <th>Intake</th>
                                    <th>ToStation</th>
                                    <th>Total</th>
                                    <th>FromStation</th>
                                    <th>Sold</th>
                                    <th>Rejects</th>
                                    <th>Spillage</th>
                                    <th>Cf</th>
                                    <th>Varriance</th>
                                </tr>
                                <tbody id="intakes">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script type="text/javascript">
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $("#firstdate").val(today);
            $("#enddate").val(today);

            $('#branch').change(function () {
                var selectVal = $("#branch").val();
                getSelectedDateIntakes();
            });
            $('#firstdate').change(function () {
                var selectVal = $("#branch").val();
                getSelectedDateIntakes();
            });
            $('#enddate').change(function () {
                var selectVal = $("#branch").val();
                getSelectedDateIntakes();
            });
            function getSelectedDateIntakes() {
                
                var branch = $("#branch").val();
                var date1 = $("#firstdate").val();
                var date2 = $("#enddate").val();
                    $.ajax({
                        type: 'POST',
                        url: "suppliedProducts?branch=" + branch +"&date1=" + date1 + "&date2=" + date2 ,
                        contentType: 'application/json',
                        success: function (response) {
                            populateIntake(response)
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
                //}
            }
            function populateIntake(intake) {
                var selectVal = $("#branch").val();
                let itemTableRows = new Array();
                intake.MilkBranchListVM.forEach(i => {
                    var ddate = i.transdate;
                    var dd1 = new Date(ddate).toLocaleDateString();
                    itemTableRows.push(`<tr>
                                <td>${dd1}</td>
                                <td>${i.Bf}</td>
                                <td>${i.Intake}</td>
                                <td>${i.Tostation}</td>
                                <td>${i.Total}</td>
                                <td>${i.FromStation}</td>
                                <td>${i.SQuantity}</td>
                                <td>${i.Reject}</td>
                                <td>${i.Spillage}</td>
                                <td>${i.cfa}</td>
                                <td>${i.Varriance}</td>
                            </tr>`)
                });

                itemTableRows.push(`<tr>
                                <td colspan="2">Totals</td>
                                <td>${intake.Intake}</td>
                                <td></td>
                                <td>${intake.Total}</td>
                                <td></td>
                                <td>${intake.SQuantity}</td>
                                <td colspan="4"></td>
                            </tr>`)

                $('#intakes').html(itemTableRows);
            }
        });
</script>
}