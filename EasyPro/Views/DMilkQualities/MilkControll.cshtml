@model EasyPro.ViewModels.MilkControlVm

@{
    ViewData["Title"] = "MilkControll";
}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #4cff00;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1110px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <h3 class="text-danger fa-bold">Milk Control List</h3>
                </div>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="divScroll">
                    <div class="table-responsive">
                        <table class="table table-hover" id="customers">
                            <thead>
                                <tr>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        BF(Kgs)
                                    </th>
                                    <th>
                                        Intake(Kgs)
                                    </th>
                                    <th>
                                        To Station(Kgs)
                                    </th>
                                    <th>
                                        Total(Kgs)
                                    </th>
                                    <th>
                                        From Station(Kgs)
                                    </th>
                                    <th>
                                        Sold(Kgs)
                                    </th>
                                    <th>
                                        Rejects(Kgs)
                                    </th>
                                    <th>
                                        Spillage(Kgs)
                                    </th>
                                    <th>
                                        CF(Kgs)
                                    </th>
                                    <th>
                                        Varriance(Kgs)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="geeks">
                                @foreach (var item in Model.MilkControlEntries)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.transdate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Bf)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Intake)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tostation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FromStation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Reject)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Spillage)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cfa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Varriance)
                                        </td>
                                        <td>
                                            @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                                            <a class="btn-info btn-info" asp-action="MilkcontrolDetails" asp-route-id="@item.Id">Details</a> |
                                            @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                        </td>
                                    </tr>
                                }

                            <tr>
                                <td colspan="2">Totals</td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.IntakeTotal)
                                </td>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Total)
                                </td>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.SQuantityTotal)
                                </td>
                                <td colspan="5"></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
