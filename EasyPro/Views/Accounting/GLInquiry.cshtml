@model IEnumerable<EasyPro.ViewModels.JournalVm>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <h3 class="text-danger fa-bold">Gl Inquiry</h3>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">

                </div>
            </div>

            <form asp-action="Create">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                        <div class="form-group">
                            <label class="control-label">Account No.</label>
                            <input id="accNo" autocomplete="off" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                        <div class="form-group">
                            <label class="control-label">Account Name</label>
                            <input id="accName" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                        <div class="form-group">
                            <label class="control-label">Balance</label>
                            <input id="balance" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                        <div class="form-group">
                            <label class="control-label">From Date</label>
                            <input type="date" id="fromDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                        <div class="form-group">
                            <label class="control-label">To Date</label>
                            <input type="date" id="toDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">

                    </div>
                </div>
            </form>
            
            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Document No
                                </th>
                                <th>
                                    Trans Descript
                                </th>
                                <th>
                                    Trans Date
                                </th>
                                <th>
                                    Debits
                                </th>
                                <th>
                                    Credits
                                </th>
                                <th>
                                    Balance
                                </th>
                            </tr>
                        </thead>
                        <tbody id="details">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
            $(function () {
                let journalDetails = new Array();
                $('#accNo').on('keyup', function () {
                    var glAccounts = @Html.Raw(Json.Serialize(ViewBag.glAccounts));
                    var accNo = $("#accNo").val();
                    var glAccount = glAccounts.filter(p => p.AccNo === accNo);
                    if (glAccount[0]) {
                        $("#accName").val(glAccount[0].GlAccName);
                    }

                    buildJournalDetails();
                });

                $('#fromDate').on('change', function () {
                    buildJournalDetails();
                });

                $('#toDate').on('change', function () {
                    buildJournalDetails();
                });

                function buildJournalDetails() {
                    var accNo = $("#accNo").val();
                    var fromDate = $("#fromDate").val();
                    var toDate = $("#toDate").val();
                    var filter = {
                        accNo: accNo,
                        fromDate: fromDate,
                        toDate: toDate
                    };

                    if (accNo && fromDate && toDate) {
                        $.ajax({
                            type: 'POST',
                            url: "glInquiry",
                            contentType: 'application/json',
                            data: JSON.stringify(filter),
                            success: function (response) {
                                response = response ? response : {};
                                response.bookBalance = response.bookBalance ? response.bookBalance : 0;
                                $("#balance").val(response.bookBalance);
                                journalDetails = response.journals ? response.journals : new Array();
                                populateDetailsTable();
                            },
                            failure: function (response) {
                            }
                        }).then(function () {
                            // ...
                        });
                    }
                }

                function populateDetailsTable() {
                    let itemTableRows = new Array();
                    journalDetails.forEach(j => {
                        itemTableRows.push(`<tr>
				                <td>${j.DocumentNo}</td>
                                <td>${j.TransDescript}</td>
                                <td>${j.TransDate}</td>
                                <td>${j.Dr}</td>
                                <td>${j.Cr}</td>
                                <td>${j.Bal}</td>
			                </tr>`);
                    });

                    $('#details').html(itemTableRows);
                }
            });
    </script>
}





