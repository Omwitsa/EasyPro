<div class="row">
    <div class="col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-sm-3 col-xs-12">
                    <h3 class="text-danger fa-bold">Special Price</h3>
                </div>
                <div class="col-sm-7 col-xs-12">
                </div>
            </div>

            <form asp-action="Create">
                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">From Date</label>
                            <input type="date" id="fromDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">To Date</label>
                            <input type="date" id="toDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                       <div class="form-group">
                            <label class="control-label">
                                <input type="checkbox" id="isFarmer"/>Farmers
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label"></label>
                            <a id="showtable" class="btn btn-warning">Show</a>
                        </div>
                    </div>
                </div>
            </form>

            <div class="bsc-tbl-hvr table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Code
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Rate
                                </th>
                                <th>
                                    Amount
                                </th>
                            </tr>
                        </thead>
                        <tbody id="details">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            $("#isFarmer").prop("checked", true);
            var today = new Date().toISOString().split('T')[0];
            $("#fromDate").val(today);
            $("#toDate").val(today);
            $("#showtable").click(function (){
                var fromDate = $("#fromDate").val();
                var toDate = $("#toDate").val();
                var isFarmer = $('#isFarmer').is(':checked');
                var filter = {
                    fromDate: fromDate,
                    toDate: toDate,
                    isFarmer: isFarmer
                };

                if (fromDate && toDate) {
                    $.ajax({
                        type: 'POST',
                        url: "specialPrice",
                        contentType: 'application/json',
                        data: JSON.stringify(filter),
                        success: function (response) {
                            populateDetailsTable(response.specialPrices);
                        },
                        failure: function (response) {
                        }
                    }).then(function () {
                        // ...
                    });
                }
            });

            function populateDetailsTable(specialPrices) {
                let itemTableRows = new Array();
                specialPrices.forEach(j => {
                    itemTableRows.push(`<tr>
                                <td>${j.Code}</td>
                                <td>${j.Quantity}</td>
                                <td>${j.Rate}</td>
                                <td>${j.Amount}</td>
                            </tr>`);
                });

                $('#details').html(itemTableRows);
            }
        });
    </script>
}
